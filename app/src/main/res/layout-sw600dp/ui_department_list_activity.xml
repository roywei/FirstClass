<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Department List"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:textColor="@color/orange_3"
        android:textStyle="bold"

        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_full"
        android:layout_marginTop="70dp"
        tools:context="com.firstclass_coursereview.firstclass.DepartmentListActivity">

        <ListView
            android:id="@+id/departmentListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/blue_5"
            android:divider="@color/blue_1"
            android:dividerHeight="10dp"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/orange_2"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navigationPicImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                />



            <TextView
                android:id="@+id/navigationUserNameTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24sp" />

            <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/background_material_light"/>

        </LinearLayout>

        <ListView
            android:id="@+id/navigationListView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>

